<mvc:View controllerName="fioricapapp.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <Table id="idAuthorsTable" items="{path: 'Global>/Authors'}">
            <columns>
                <Column id='_IDGenColumn1' width="12em">
                    <Text id="_IDGenText5" text="Nombre"/>
                </Column>
            </columns>

            <items>
                <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle" type="Inactive">
                    <cells>
                        <ObjectIdentifier id="_IDGenObjectIdentifier1" title="{Global>AuthorID}" text="{Global>name}"></ObjectIdentifier>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
