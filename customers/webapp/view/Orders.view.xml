        <Table id="idOrdersTable" inset="false" items="{ path: 'Orders>/'}">
            <columns>
                <Column id='_IDGenColumn1' width="12em">
                    <Text id="_IDGenText5" text="Nombre"/>
                </Column> 
            </columns>

            <items>
                <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle" type="Inactive" press=".onPress">
